@model List<CapaEntidad.DetalleVenta>
@{
    ViewBag.Title = "Miscompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container">

    <div class=" row mt-5">

        <div class=" col-sm-12">


            @{ 

            if(Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <div class=" row mb-3">
                        <div class=" col-sm-12">
                            <div class=" card">
                                <div class=" card-body bg-light">
                                    <h6>ID TRANSACCION: @item.VEN_IDTRANSACCION</h6>
                                    <div class=" table-responsive">
                                        <table class=" table table-bordered">

                                            <thead>
                                                <tr>

                                                    <th>Imagen</th>
                                                    <th>Producto</th>
                                                    <th>Precio Unitario</th>
                                                    <th>Cantidad</th>
                                                    <th>Sub Total</th>

                                                </tr>
                                            </thead>

                                            <tbody class=" bg-white">

                                                <tr>

                                                    <td>
                                                        <img class=" card-img-top mb-5 mb-md-0" src="data:image/@item.oProducto.Extension;base64,@item.oProducto.Base64" style="width:120px;height:120px"/>
                                                    </td>

                                                    <td valign="middle">
                                                        @item.oProducto.PRO_NOMBRE
                                                    </td>
                                                    <td valign="middle">
                                                        $ @item.oProducto.PRO_PRECIO MXN
                                                    </td>
                                                    <td valign="middle">
                                                        @item.DETV_CANTIDAD 
                                                    </td>
                                                    <td valign="middle">
                                                       $ @item.DETV_TOTAL MXN
                                                    </td>

                                                </tr>

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
               <div class="row mb-3">
                   <div class="col-sm-12 text-center">
                       <h1>NO SE ENCONTRO NINGUNA COMPRA</h1>
                   </div>
               </div>
            }

            }

        </div>

    </div>

</div>

